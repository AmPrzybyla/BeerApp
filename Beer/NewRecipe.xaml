<Window x:Class="Beer.NewRecipe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Beer"
        mc:Ignorable="d"
        Title="NewRecipe" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <WrapPanel>
                <Label Width="60" >Nazwa: </Label>
                <TextBox Margin="3" Width="140" x:Name="NameOfBeerBox" />
            </WrapPanel>
            <WrapPanel >
                <Label Width="60" >Styl:</Label>
                <TextBox Margin="3" Width="140" x:Name="StyleOfBeerBox"/>
            </WrapPanel>
            <Button x:Name="AddBeer" Margin="5" Click="AddBeer_Click">Dodaj</Button>
        </StackPanel>
    </Grid>
</Window>
