<Window x:Class="Beer.AddMalt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Beer"
        mc:Ignorable="d"
        Title="AddMalt" Height="300" Width="360">
    <StackPanel Margin="5">
        <WrapPanel>
            <Label Width="100" Margin="3">Podaj Nazwe: </Label>
            <TextBox Width="220" Margin="3" x:Name="AddMaltName"></TextBox>
        </WrapPanel>
        <WrapPanel>
            <Label Width="100" Margin="3">Podaj Wagę:</Label>
            <TextBox Width="180" Margin="3" x:Name="AddWeightMalt"></TextBox>
            <Label Margin="3">g</Label>

        </WrapPanel>
        <WrapPanel>
            <Label Width="100" Margin="3">Podaj Barwę:</Label>
            <TextBox Width="180" Margin="3" x:Name="AddColorMalt"></TextBox>
            <Label Margin="3">Ebc</Label>
        </WrapPanel>
        <WrapPanel>
            <Label Width="100" Margin="3">Podaj Wydajność:</Label>
            <TextBox Width="180" Margin="3" x:Name="AddYieldMalt"></TextBox>
            <Label Margin="3">%</Label>
        </WrapPanel>
        <Button Margin="5" x:Name="AddMaltButton" Click="AddMaltButton_Click" >Dodaj</Button>
    </StackPanel>
</Window>
